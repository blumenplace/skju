{
  "name": "SKJU Dev Container",
  "service": "dev",
  "dockerComposeFile": [
    "../docker-compose.yml"
  ],
  "overrideCommand": false,
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "tamasfe.even-better-toml",
        "fill-labs.dependi"
      ],
      "settings": {
        "rust-analyzer.check.command": "clippy",
        "rust-analyzer.rustfmt.extraArgs": [
          "--edition",
          "2024"
        ]
      }
    }
  },
  "remoteUser": "ubuntu",
  "postCreateCommand": "cargo build",
  "forwardPorts": [
    8080
  ],
  "workspaceFolder": "/workspaces/skju"
}
